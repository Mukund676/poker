{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@poker/engine": ["../../packages/poker-engine/index.ts"]
    }
  },
  "files": [
    "pokersolver.d.ts"
  ],
  "include": ["src", "pokersolver.d.ts"],
  "exclude": ["node_modules"]
}